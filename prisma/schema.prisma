generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ROL {
  ADMIN
  VENDEDOR
  JEFE_VENTAS
}

enum TIPO_PAGO {
  EFECTIVO
  TARJETA
}

enum TIPO_DOCUMENTO {
  BOLETA
  FACTURA
}

model Usuario {
  id                  String  @id @default(uuid())
  nombre              String
  contrasena          String
  direccion           String
  telefono            String
  rut                 String
  fecha_nacimiento    DateTime
  rol                 ROL
  ventas              Venta[]
}


model Venta {
  id                String          @id @default(uuid())
  fecha             DateTime
  tipoDocumento     TIPO_DOCUMENTO
  totalNeto         Float
  tipo_pago         TIPO_PAGO
  iva               Float
  totalFinal        Float
  usuario           Usuario         @relation(fields: [usuarioId], references: [id])
  usuarioId         String
  detalleVentas     DetalleVenta[]
  cliente           Cliente?        @relation(fields: [clienteId], references: [id])
  clienteId         String?
  diaVentaId        String
  diaVenta          DiaVentas       @relation(fields: [diaVentaId], references: [id])
}

model DetalleVenta {
  id                String   @id @default(uuid())
  cantidad          Int
  precioUnitario    Float
  totalProducto     Float
  producto          Producto @relation(fields: [productoId], references: [id])
  productoId        String
  venta             Venta    @relation(fields: [ventaId], references: [id])
  ventaId           String
}

model Producto {
  id                String   @id @default(uuid())
  nombre            String
  descripcion       String
  SKU               String   @unique
  valorUnitario     Float
  estado            Boolean   @default(true)
  imagen            String
  stock             Int
  fechaVencimiento  DateTime?
  detalleVentas     DetalleVenta[]
}

model Cliente {
  id                String   @id @default(uuid())
  nombre            String
  rut               String   @unique
  razonSocial       String?
  direccion         String?
  telefono          String?
  fecha_nacimiento  DateTime?
  ventas            Venta[]
}

model DiaVentas {
  id                String   @id @default(uuid())
  fecha             DateTime @unique
  abierto           Boolean  @default(false)
  ventas            Venta[]
}
